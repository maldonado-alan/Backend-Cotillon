{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "integer",
      "required": true
    },
    "stock": {
      "type": "integer",
      "default": 0
    },
    "feature": {
      "type": "boolean",
      "default": false
    },
    "sku": {
      "type": "string",
      "unique": true
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "product"
    }
  }
}
